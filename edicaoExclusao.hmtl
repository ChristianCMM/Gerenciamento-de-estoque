<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edição e Exclusão de Componentes</title>
    <link rel="stylesheet" href="cssCadastro.css">
    <style>
        .component-list {
            margin-top: 20px;
        }

        .component-item {
            background-color: #ffffff;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .component-actions button {
            margin-left: 10px;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .edit-button {
            background-color: #007bff;
            color: white;
        }

        .edit-button:hover {
            background-color: #0056b3;
        }

        .delete-button {
            background-color: #dc3545;
            color: white;
        }

        .delete-button:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edição e Exclusão de Componentes</h1>
        <div class="component-list">
            <div class="component-item">
                <span>Nome do Componente 1</span>
                <div class="component-actions">
                    <button class="edit-button" onclick="editarComponente(1)">Editar</button>
                    <button class="delete-button" onclick="excluirComponente(1)">Excluir</button>
                </div>
            </div>
            <div class="component-item">
                <span>Outro Componente</span>
                <div class="component-actions">
                    <button class="edit-button" onclick="editarComponente(2)">Editar</button>
                    <button class="delete-button" onclick="excluirComponente(2)">Excluir</button>
                </div>
            </div>
            </div>
        <div class="navigation">
            <a href="cadastro.html">Cadastrar Novo Componente</a>
        </div>
    </div>

    <script>
        // Funções JavaScript para editar e excluir (serão implementadas posteriormente)
        function editarComponente(id) {
            alert(`Editar componente com ID: ${id}`);
            // Aqui você redirecionaria para uma tela de edição com os dados do componente
        }

        function excluirComponente(id) {
            if (confirm(`Tem certeza que deseja excluir o componente com ID: ${id}?`)) {
                alert(`Componente com ID: ${id} excluído.`);
                // Aqui você faria a lógica para remover o componente
            }
        }
    </script>
</body>
</html>
